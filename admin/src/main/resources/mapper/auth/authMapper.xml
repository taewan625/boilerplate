<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.exporum.admin.authentication.mapper.AuthMapper">
    <select id="getUser" parameterType="String" resultType="com.exporum.admin.authentication.model.AuthUser">
        <![CDATA[
            select
                a.id,
                a.email,
                a.password,
                a.username AS name,
                a.phone_number AS mobile_number
            from admin as a
            where 1=1
            and a.username = #{username}
            and a.is_deleted = 0
        ]]>
    </select>
</mapper>
